# {{ ansible_managed }}
---

services:
  node-exporter:
    image: quay.io/prometheus/node-exporter:{{ node_exporter_version }}
    restart: unless-stopped
    container_name: node-exporter
    command:
      - '--path.rootfs=/host'
    network_mode: host
    pid: host
    volumes:
      - '/:/host:ro,rslave'